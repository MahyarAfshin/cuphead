<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cuphead.views.controllers.ChangeUsernamePageController"
            prefHeight="720" prefWidth="1280">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Text text = "new username:"/>
            <TextField fx:id="newUsername" promptText="enter your new username here" maxWidth="300" maxHeight="50"/>
            <VBox fx:id="usernameError" alignment="CENTER"/>
            <Button text = "Apply" onMouseClicked="#changeUsername"/>
            <Button text = "Back" onMouseClicked="#back"/>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@../css/Game.css"/>
    </stylesheets>

</BorderPane>
